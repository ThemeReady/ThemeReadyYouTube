<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lc_button_ripple_material_dark_color" />
            <corners android:radius="@dimen/lc_button_corner_radius" />
            <stroke android:width="@dimen/lc_button_border_size" android:color="@color/lc_white" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/lc_button_corner_radius" />
            <stroke android:width="@dimen/lc_button_border_size" android:color="@color/lc_white" />
        </shape>
    </item>
</selector>